---
import type { Lang } from '@/lib/i18n';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;

const labels = {
  pl: {
    title: 'Dobierz pielęgnację',
    sub: '30 sek · bezpłatnie'
  },
  en: {
    title: 'Find best care',
    sub: '30 sec · free'
  },
  de: {
    title: 'Pflege finden',
    sub: '30 Sek. · kostenlos'
  }
};
---

<div class="floating-cta-wrap fixed bottom-4 right-4 z-[45] sm:bottom-6 sm:right-6">
  <button
    type="button"
    data-open-quiz
    class="floating-pulse group rounded-[1.05rem] border border-[rgba(255,223,211,0.55)] bg-[linear-gradient(125deg,#ef8a69,#e7748c)] px-4 py-3 text-left text-white shadow-[0_20px_48px_rgba(232,124,96,0.4)] transition duration-300 hover:-translate-y-0.5 hover:shadow-[0_26px_56px_rgba(232,124,96,0.5)] focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[rgba(255,230,219,0.85)] focus-visible:ring-offset-2 focus-visible:ring-offset-[rgba(17,10,8,0.8)]"
  >
    <span class="block text-sm font-semibold">{labels[lang].title}</span>
    <span class="mt-0.5 block text-xs text-[rgba(255,244,239,0.95)]">{labels[lang].sub}</span>
  </button>
</div>
