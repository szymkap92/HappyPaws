---
const target = '/pl/';
const canonical = new URL(target, Astro.site ?? new URL('https://happy-paws.example')).toString();
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="robots" content="noindex" />
    <link rel="canonical" href={canonical} />
    <meta http-equiv="refresh" content={`0;url=${target}`} />
    <script is:inline>
      window.location.replace('/pl/');
    </script>
    <style>
      html,
      body {
        margin: 0;
        min-height: 100%;
        background: #120b08;
      }
    </style>
    <title>Redirecting...</title>
  </head>
  <body aria-hidden="true"></body>
</html>
